{    
    "name": "corentin-larose/unit-tests-tutorial",    
    "description": "A tutorial on Unit Testing",
    "autoload": {
        "psr-4": {
            "CL\\UnitTestingTutorial\\": "src/",
            "CL\\UnitTestingTutorialTest\\": "test/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "process-timeout" : 3600
    },
    "keywords": [
        "Unit testing",
        "PhpUnit",
        "DbUnit"
    ],
    "require": {
        "php": ">=5.3.23",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "phpunit/dbunit": ">=1.2"
    }
}
